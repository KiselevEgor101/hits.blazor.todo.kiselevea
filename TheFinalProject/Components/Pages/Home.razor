@page "/"
@inject NavigationManager Navigation

<PageTitle>Органайзер финансов</PageTitle>

<style>
    .hero {
        text-align: center;
        padding: 80px 20px 40px;
        background: #ffffff;
    }

        .hero h1 {
            font-size: 36px;
            margin-bottom: 12px;
        }

        .hero p {
            color: #666;
            font-size: 18px;
            margin-bottom: 30px;
        }

    .primary-btn {
        background: #1f9d55;
        color: white;
        border: none;
        padding: 14px 28px;
        font-size: 16px;
        border-radius: 6px;
        cursor: pointer;
    }

    .features {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 20px;
        padding: 40px 10%;
    }

    .feature-card {
        background: #f9f9f9;
        padding: 24px;
        border-radius: 10px;
        text-align: center;
    }

        .feature-card h3 {
            margin-bottom: 10px;
        }

    .steps {
        padding: 40px 10%;
        text-align: center;
    }

    .steps-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }

    .step {
        background: #ffffff;
        border: 1px solid #eee;
        border-radius: 10px;
        padding: 20px;
    }

    .step-number {
        width: 40px;
        height: 40px;
        background: #2563eb;
        color: white;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .stats {
        background: #f3f6fb;
        padding: 40px 10%;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 20px;
        text-align: center;
    }

    .stat-value {
        font-size: 28px;
        font-weight: bold;
        color: #2563eb;
    }

    .footer-note {
        text-align: center;
        color: #777;
        font-size: 14px;
        margin: 30px 0;
    }
</style>

<div class="hero">
    <h1>Органайзер финансов</h1>
    <p>Удобный контроль доходов, расходов и бюджета</p>
    <button class="primary-btn" @onclick="GoToDepartments">
        Начать работу
    </button>
</div>

<div class="features">
    <div class="feature-card">
        <h3>Быстро</h3>
        <p>Добавление доходов и расходов за несколько секунд</p>
    </div>
    <div class="feature-card">
        <h3>Надёжно</h3>
        <p>Данные хранятся локально или в базе данных</p>
    </div>
    <div class="feature-card">
        <h3>Аналитика</h3>
        <p>Наглядные отчёты</p>
    </div>
</div>

<div class="steps">
    <h2>Как это работает</h2>
    <div class="steps-grid">
        <div class="step">
            <div class="step-number">1</div>
            <p>Добавьте категории расходов</p>
        </div>
        <div class="step">
            <div class="step-number">2</div>
            <p>Вносите доходы и траты</p>
        </div>
        <div class="step">
            <div class="step-number">3</div>
            <p>Следите за балансом</p>
        </div>
        <div class="step">
            <div class="step-number">4</div>
            <p>Анализируйте статистику</p>
        </div>
    </div>
</div>

<div class="stats">
    <div>
        <div class="stat-value">100%</div>
        <p>Учебный проект</p>
    </div>
    <div>
        <div class="stat-value">ООП</div>
        <p>Архитектура</p>
    </div>
    <div>
        <div class="stat-value">Blazor</div>
        <p>Технология</p>
    </div>
</div>

<div class="footer-note">
    Итоговый проект по ООП · СМАРТб-24-1 · Киселев Егор
</div>

@code {
    void GoToDepartments()
    {
        Navigation.NavigateTo("/departments");
    }
}
