@page "/reports"
@using TheFinalProject.Models
@using TheFinalProject.Data.Services
@inject TransactionService TransactionService
@inject DepartmentService DepartmentService

<h3>Финансовые отчёты</h3>

<!-- Фильтр по периоду -->
<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Отчёт за период</h5>

        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">С</label>
                <input type="date" class="form-control" @bind="dateFrom" />
            </div>
            <div class="col-md-4">
                <label class="form-label">По</label>
                <input type="date" class="form-control" @bind="dateTo" />
            </div>
            <div class="col-md-4">
                <button class="btn btn-primary w-100" @onclick="ApplyPeriod">
                    Показать
                </button>
            </div>
        </div>
    </div>
</div>

@if (isLoading)
{
    <p><em>Загрузка...</em></p>
}
else if (!filteredTransactions.Any())
{
    <div class="alert alert-info">
        <strong>Нет данных за выбранный период.</strong>
    </div>
}
else
{
    <!-- Основные показатели -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Доходы</h5>
                    <h2>@($"{totalIncome:N2}") ₽</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5 class="card-title">Расходы</h5>
                    <h2>@($"{totalExpense:N2}") ₽</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">Баланс</h5>
                    <h2>@($"{balance:N2}") ₽</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Круговая диаграмма -->
    <div class="card mb-4">
        <div class="card-body text-center">
            <h5 class="card-title">Соотношение доходов и расходов</h5>

            <svg width="200" height="200" viewBox="0 0 120 120">
                <!-- Фон (расходы) -->
                <circle cx="60" cy="60" r="50"
                        fill="none"
                        stroke="#dc3545"
                        stroke-width="20" />

                <!-- Доходы -->
                <circle cx="60" cy="60" r="50"
                        fill="none"
                        stroke="#28a745"
                        stroke-width="20"
                        stroke-dasharray="@incomeDash 314"
                        stroke-dashoffset="0"
                        transform="rotate(-90 60 60)" />
            </svg>

            <div class="mt-3">
                <span class="text-success">Доходы: @incomePercent%</span> |
                <span class="text-danger">Расходы: @expensePercent%</span>
            </div>
        </div>
    </div>

    <!-- Баланс по категориям -->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Категория</th>
                <th>Доход</th>
                <th>Расход</th>
                <th>Баланс</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dept in departments)
            {
                var income = filteredTransactions
                .Where(t => t.DepartmentId == dept.Id && t.OperationType == "Доход")
                .Sum(t => t.Amount);

                var expense = filteredTransactions
                .Where(t => t.DepartmentId == dept.Id && t.OperationType == "Расход")
                .Sum(t => t.Amount);

                var deptBalance = income - expense;

                <tr>
                    <td>@dept.Name</td>
                    <td class="text-success">@($"{income:N2}") ₽</td>
                    <td class="text-danger">@($"{expense:N2}") ₽</td>
                    <td class="@(deptBalance >= 0 ? "text-success" : "text-danger")">
                        @($"{deptBalance:N2}") ₽
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Transaction> transactions = new();
    private List<Transaction> filteredTransactions = new();
    private List<Department> departments = new();

    private bool isLoading = true;

    private decimal totalIncome;
    private decimal totalExpense;
    private decimal balance;

    private int incomePercent;
    private int expensePercent;
    private double incomeDash;

    private DateTime? dateFrom;
    private DateTime? dateTo;

    protected override async Task OnInitializedAsync()
    {
        departments = await DepartmentService.GetDepartmentsAsync();
        transactions = await TransactionService.GetTransactionsAsync();

        filteredTransactions = transactions;
        CalculateTotals();

        isLoading = false;
    }

    private void ApplyPeriod()
    {
        filteredTransactions = transactions
            .Where(t =>
                (!dateFrom.HasValue || t.Date >= dateFrom.Value) &&
                (!dateTo.HasValue || t.Date <= dateTo.Value))
            .ToList();

        CalculateTotals();
    }

    private void CalculateTotals()
    {
        totalIncome = filteredTransactions
            .Where(t => t.OperationType == "Доход")
            .Sum(t => t.Amount);

        totalExpense = filteredTransactions
            .Where(t => t.OperationType == "Расход")
            .Sum(t => t.Amount);

        balance = totalIncome - totalExpense;

        var total = totalIncome + totalExpense;
        if (total > 0)
        {
            incomePercent = (int)Math.Round(totalIncome / total * 100);
            expensePercent = 100 - incomePercent;

            // длина дуги для SVG (окружность r=50, длина ≈ 2*PI*50 = 314)
            incomeDash = 314 * incomePercent / 100.0;
        }
        else
        {
            incomePercent = 0;
            expensePercent = 0;
            incomeDash = 0;
        }
    }
}
