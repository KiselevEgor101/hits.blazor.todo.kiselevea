@page "/accounts"
@using TheFinalProject.Models
@using TheFinalProject.Data.Services
@inject AccountService AccountService
@inject DepartmentService DepartmentService
@inject NavigationManager NavManager

<h3>Счета</h3>

<div class="mb-3">
    <a href="/accounts/add" class="btn btn-primary">
        <span class="bi bi-plus-circle"></span> Добавить счет
    </a>
</div>

<div class="mb-3">
    <label class="form-label">Фильтр по категории:</label>
    <select class="form-select" style="max-width: 300px;"
            @bind="selectedDepartmentId"
            @bind:after="FilterAccounts">
        <option value="0">Все категории</option>
        @foreach (var dept in departments)
        {
            <option value="@dept.Id">@dept.Name</option>
        }
    </select>
</div>

@if (filteredAccounts == null)
{
    <p><em>Загрузка...</em></p>
}
else if (!filteredAccounts.Any())
{
    <div class="alert alert-info">
        @if (selectedDepartmentId == 0)
        {
            <text>
                Счетов пока нет.
                <a href="/accounts/add">Добавьте первый счет</a>
            </text>
        }
        else
        {
            <text>В этой категории нет счетов.</text>
        }
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Название</th>
                <th>Тип</th>
                <th>Категория</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in filteredAccounts)
            {
                <tr>
                    <td><strong>@account.DisplayName</strong></td>
                    <td>@account.Role</td>
                    <td>
                        @departments.FirstOrDefault(d => d.Id == account.DepartmentId)?.Name
                    </td>
                    <td>
                        <button class="btn btn-sm btn-danger"
                                @onclick="() => ShowDeleteConfirmation(account)">
                            Удалить
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (deleteConfirmationVisible)
{
    <div class="modal fade show" style="display: block;" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Подтверждение удаления</h5>
                    <button type="button"
                            class="close"
                            aria-label="Close"
                            @onclick="HideDeleteConfirmation">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>
                        Вы уверены, что хотите удалить счет
                        <strong>@accountToDelete?.DisplayName</strong>?
                    </p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary"
                            @onclick="HideDeleteConfirmation">
                        Отмена
                    </button>
                    <button class="btn btn-danger"
                            @onclick="DeleteAccount">
                        Удалить
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Account> allAccounts = new();
    private List<Account> filteredAccounts = new();
    private List<Department> departments = new();
    private int selectedDepartmentId = 0;

    private bool deleteConfirmationVisible = false;
    private Account? accountToDelete;

    protected override async Task OnInitializedAsync()
    {
        allAccounts = await AccountService.GetAllAccountsAsync();
        departments = await DepartmentService.GetDepartmentsAsync();
        FilterAccounts();
    }

    private void FilterAccounts()
    {
        if (selectedDepartmentId == 0)
        {
            filteredAccounts = allAccounts;
        }
        else
        {
            filteredAccounts = allAccounts
                .Where(a => a.DepartmentId == selectedDepartmentId)
                .ToList();
        }
    }

    private void ShowDeleteConfirmation(Account account)
    {
        accountToDelete = account;
        deleteConfirmationVisible = true;
    }

    private void HideDeleteConfirmation()
    {
        deleteConfirmationVisible = false;
        accountToDelete = null;
    }

    private async Task DeleteAccount()
    {
        if (accountToDelete == null)
            return;

        await AccountService.DeleteAccountAsync(accountToDelete.Id);

        allAccounts = await AccountService.GetAllAccountsAsync();
        FilterAccounts();

        HideDeleteConfirmation();
    }
}
