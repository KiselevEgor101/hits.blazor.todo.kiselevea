@page "/transactions"
@using TheFinalProject.Models
@using TheFinalProject.Data.Services
@inject TransactionService TransactionService
@inject DepartmentService DepartmentService
@inject AccountService AccountService
@inject NavigationManager NavManager

<h3>Журнал финансовых операций</h3>

<div class="mb-3">
    <a href="/add-transaction" class="btn btn-success">+ Добавить операцию</a>
</div>

<div class="mb-3">
    <label class="form-label">Фильтр по категории:</label>
    <select class="form-select" @onchange="LoadFilteredTransactions">
        <option value="0">Все категории</option>
        @foreach (var dept in departments)
        {
            <option value="@dept.Id">@dept.Name</option>
        }
    </select>
</div>

@if (transactions == null)
{
    <p><em>Загрузка...</em></p>
}
else if (!transactions.Any())
{
    <p><em>Операций пока нет. Добавьте первую запись.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Дата</th>
                <th>Категория</th>
                <th>Счёт</th>
                <th>Тип</th>
                <th>Описание</th>
                <th>Сумма</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in transactions)
            {
                <tr>
                    <td>@t.Date.ToShortDateString()</td>
                    <td>@GetDepartmentName(t.DepartmentId)</td>
                    <td>@GetAccountName(t.AccountId)</td>
                    <td>@t.OperationType</td>
                    <td>@t.Description</td>
                    <td>@t.Amount ₽</td>
                    <td>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteTransaction(t.Id)">Удалить</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Transaction> transactions = new();
    private List<Department> departments = new();
    private List<Account> accounts = new();
    private int selectedDepartmentId = 0;

    protected override async Task OnInitializedAsync()
    {
        departments = await DepartmentService.GetDepartmentsAsync();
        accounts = await AccountService.GetAllAccountsAsync();
        transactions = await TransactionService.GetTransactionsAsync();
    }

    private async Task LoadFilteredTransactions(ChangeEventArgs e)
    {
        if (e.Value != null && int.TryParse(e.Value.ToString(), out int deptId))
        {
            // Загружаем все транзакции и фильтруем по выбранной категории
            transactions = await TransactionService.GetTransactionsAsync();
            if (deptId > 0)
            {
                transactions = transactions.Where(t => t.DepartmentId == deptId).ToList();
            }
        }
        else
        {
            // Если ничего не выбрано или выбран "Все категории", загружаем все транзакции
            transactions = await TransactionService.GetTransactionsAsync();
        }
    }

    private async Task DeleteTransaction(int id)
    {
        // Удаление транзакции
        await TransactionService.DeleteTransactionAsync(id);

        // Перезагружаем список транзакций после удаления
        transactions = await TransactionService.GetTransactionsAsync();
    }

    // Метод для получения названия категории (если категория не найдена, вернуть "Не указано")
    private string GetDepartmentName(int departmentId)
    {
        var department = departments.FirstOrDefault(d => d.Id == departmentId);
        return department?.Name ?? "Не указано";
    }

    // Метод для получения названия счета (если счет не найден, вернуть "Не указано")
    private string GetAccountName(int accountId)
    {
        var account = accounts.FirstOrDefault(a => a.Id == accountId);
        return account?.DisplayName ?? "Не указано";
    }
}
